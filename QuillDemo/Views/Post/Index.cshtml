@model IEnumerable<QuillDemo.Models.Post>

<h2>Posts</h2>

<a class="btn btn-success mb-3" href="/Post/Create">Create New</a>

<table class="table table-bordered">
    <tr>
        <th>Title</th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>
                <a class="btn btn-sm btn-primary" href="/Post/Details/@item.Id">View</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id"
                   onclick="return confirm('Are you sure you want to delete?');">
                    Delete
                </a>

            </td>
        </tr>
    }
</table>
